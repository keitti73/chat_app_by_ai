# =================================================================
# Terraform Variables Configuration Example
# =================================================================
# このファイルをコピーして terraform.tfvars として使用してください
# 環境に応じて値を調整してください

# =================================================================
# Basic Configuration
# =================================================================

# AWS地域の設定
aws_region = "us-east-1"

# プロジェクト名（リソースの命名に使用）
project_name = "appsync-chat-app"

# 環境名（dev, staging, prod）
environment = "dev"

# =================================================================
# DynamoDB Configuration
# =================================================================

# DynamDB課金モード（PAY_PER_REQUEST または PROVISIONED）
dynamodb_billing_mode = "PAY_PER_REQUEST"

# DynamoDBテーブル名のプレフィックス（オプション）
# dynamodb_table_prefix = "dev"

# =================================================================
# Cognito Configuration
# =================================================================

# パスワードの最小文字数
cognito_password_minimum_length = 8

# 自動確認する属性
cognito_auto_verified_attributes = ["email"]

# =================================================================
# AppSync Configuration
# =================================================================

# API Keyの有効期限（日数）
appsync_api_key_expires_days = 365

# ログレベル（NONE, ERROR, ALL）
appsync_log_level = "ERROR"

# =================================================================
# Lambda Configuration
# =================================================================

# Lambdaランタイム
lambda_runtime = "nodejs18.x"

# Lambda実行タイムアウト（秒）
lambda_timeout = 30

# Lambdaメモリサイズ（MB）
lambda_memory_size = 128

# =================================================================
# Feature Flags
# =================================================================

# AWS Comprehend感情分析機能を有効化
enable_comprehend = true

# X-Rayトレーシングを有効化
enable_xray_tracing = false

# CloudWatch Insightsを有効化
enable_cloudwatch_insights = false

# =================================================================
# Common Tags
# =================================================================

common_tags = {
  Project     = "ChatApp"
  ManagedBy   = "Terraform"
  Owner       = "DevOps"
  CostCenter  = "Engineering"
  Department  = "IT"
}
